<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/main"
            app:startDestination="@+id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bluetoothvehiclemonitor.btvm.ui.HomeFragment"
        android:label="@string/home_title"
        tools:layout="@layout/fragment_home">
        <argument android:name="ARE_RUNNING" app:argType="string" app:nullable="true" android:defaultValue="null"/>
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.bluetoothvehiclemonitor.btvm.ui.SettingsFragment"
        android:label="@string/settings_title"
        tools:layout="@layout/fragment_settings"/>
    <fragment
        android:id="@+id/metricsFragment"
        android:name="com.bluetoothvehiclemonitor.btvm.ui.MetricsFragment"
        android:label="@string/metrics_title"
        tools:layout="@layout/fragment_metrics"/>

</navigation>