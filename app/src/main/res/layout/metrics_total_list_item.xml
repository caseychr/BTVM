<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_mild_blue">

        <TextView
            android:id="@+id/tv_metric_overall_title"
            style="@style/CardStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="OVERALL METRICS"
            android:textSize="24dp"
            android:textColor="@color/color_milk_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>



        <TextView
            android:id="@+id/tv_metric_overall_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CardStyle"
            android:textSize="14dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp" android:text="Total Distance"
            android:textColor="@color/color_milk_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_overall_title"/>
        <TextView
            android:id="@+id/tv_metric_distance_overall_num"
            style="@style/CardStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="1230"
            android:textSize="14dp"
            android:textColor="@color/color_milk_white"
            app:layout_constraintStart_toEndOf="@+id/tv_metric_overall_distance"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_overall_title"/>
        <TextView
            android:id="@+id/tv_metric_distance_overall_unit"
            style="@style/CardStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="KMPH"
            android:textSize="14dp"
            android:textColor="@color/color_milk_white"
            app:layout_constraintStart_toEndOf="@+id/tv_metric_distance_overall_num"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_overall_title"/>



        <TextView
            android:id="@+id/tv_metric_overall_airflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            style="@style/CardStyle"
            android:textSize="14dp"
            android:text="Avg Airflow"
            android:textColor="@color/color_milk_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_overall_distance"/>
        <TextView
            android:id="@+id/tv_metric_airflow_overall_num"
            style="@style/CardStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="1230"
            android:textSize="14dp"
            android:textColor="@color/color_milk_white"
            app:layout_constraintStart_toEndOf="@+id/tv_metric_overall_airflow"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_distance_overall_num"/>
        <TextView
            android:id="@+id/tv_metric_airflow_overall_unit"
            style="@style/CardStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="KMPH"
            android:textColor="@color/color_milk_white"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/tv_metric_airflow_overall_num"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_distance_overall_unit"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_airflow_overall_unit">
            <TextView
                android:id="@+id/tv_metric_overall_coolant"
                style="@style/CardStyle"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Avg Coolant Temp"
                android:textColor="@color/color_milk_white"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_metric_coolant_overall_num"
                style="@style/CardStyle"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="1230"
                android:textSize="14dp"
                android:textColor="@color/color_milk_white"
                app:layout_constraintStart_toEndOf="@+id/tv_metric_overall_coolant"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_metric_coolant_overall_unit"
                style="@style/CardStyle"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="KMPH"
                android:textSize="14dp"
                android:textColor="@color/color_milk_white"
                app:layout_constraintStart_toEndOf="@+id/tv_metric_coolant_overall_num"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/tv_metric_overall_rpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginStart="8dp"
            style="@style/CardStyle"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/color_milk_white"
            android:text="Avg RPM"
            app:layout_constraintEnd_toStartOf="@+id/tv_metric_rpm_overall_num"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_overall_title"/>
        <TextView
            android:id="@+id/tv_metric_rpm_overall_num"
            style="@style/CardStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:text="1230"
            android:textColor="@color/color_milk_white"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_metric_rpm_overall_unit"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_overall_title"/>
        <TextView
            android:id="@+id/tv_metric_rpm_overall_unit"
            style="@style/CardStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:text="KMPH"
            android:textColor="@color/color_milk_white"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_overall_title"/>



        <TextView
            android:id="@+id/tv_metric_overall_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CardStyle"
            android:textSize="14dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:text="Avg Speed"
            android:textColor="@color/color_milk_white"
            app:layout_constraintEnd_toStartOf="@+id/tv_metric_speed_overall_num"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_overall_rpm"/>
        <TextView
            android:id="@+id/tv_metric_speed_overall_num"
            style="@style/CardStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:text="1230"
            android:textColor="@color/color_milk_white"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_metric_speed_overall_unit"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_rpm_overall_num"/>
        <TextView
            android:id="@+id/tv_metric_speed_overall_unit"
            style="@style/CardStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:text="KMPH"
            android:textSize="14dp"
            android:textColor="@color/color_milk_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_rpm_overall_unit"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>