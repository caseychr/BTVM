<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray">

        <TextView
            android:id="@+id/tv_metric_date"
            style="@style/CardStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="DATE OF TRIP"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>



        <TextView
            android:id="@+id/tv_metric_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CardStyle"
            android:textSize="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp" android:text="Total Distance"
            
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_date"/>
        <TextView
            android:id="@+id/tv_metric_distance_num"
            style="@style/CardStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="1230"
            android:textSize="12dp"
            
            app:layout_constraintStart_toEndOf="@+id/tv_metric_distance"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_date"/>
        <TextView
            android:id="@+id/tv_metric_distance_unit"
            style="@style/CardStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:text="KMPH"
            android:textSize="12dp"
            
            app:layout_constraintStart_toEndOf="@+id/tv_metric_distance_num"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_date"/>


        <TextView
            android:id="@+id/tv_metric_coolant"
            style="@style/CardStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="Avg Coolant Temp"
            
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_distance"/>
        <TextView
            android:id="@+id/tv_metric_coolant_num"
            style="@style/CardStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="1230"
            android:textSize="12dp"
            
            app:layout_constraintStart_toEndOf="@+id/tv_metric_coolant"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_distance_num"/>
        <TextView
            android:id="@+id/tv_metric_coolant_unit"
            style="@style/CardStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:text="KMPH"
            android:textSize="12dp"
            
            app:layout_constraintStart_toEndOf="@+id/tv_metric_coolant_num"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_distance_unit"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_coolant">

            <TextView
                android:id="@+id/tv_metric_airflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                style="@style/CardStyle"
                android:textSize="12dp"
                android:text="Avg Airflow"
                
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_metric_airflow_num"
                style="@style/CardStyle"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="1230"
                android:textSize="12dp"
                
                app:layout_constraintStart_toEndOf="@+id/tv_metric_airflow"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_metric_airflow_unit"
                style="@style/CardStyle"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="KMPH"
                
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/tv_metric_airflow_num"
                app:layout_constraintTop_toTopOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tv_metric_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CardStyle"
            android:textSize="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:text="Avg Speed"
            
            app:layout_constraintEnd_toStartOf="@+id/tv_metric_speed_num"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_date"/>
        <TextView
            android:id="@+id/tv_metric_speed_num"
            style="@style/CardStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:text="1230"
            
            android:textSize="12dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_metric_speed_unit"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_date"/>
        <TextView
            android:id="@+id/tv_metric_speed_unit"
            style="@style/CardStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:text="KMPH"
            android:textSize="12dp"
            
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_date"/>


        <TextView
            android:id="@+id/tv_metric_rpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginStart="8dp"
            style="@style/CardStyle"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            
            android:text="Avg RPM"
            app:layout_constraintEnd_toStartOf="@+id/tv_metric_rpm_num"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_speed"/>
        <TextView
            android:id="@+id/tv_metric_rpm_num"
            style="@style/CardStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:text="1230"
            
            android:textSize="12dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_metric_rpm_unit"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_speed_num"/>
        <TextView
            android:id="@+id/tv_metric_rpm_unit"
            style="@style/CardStyle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:text="RPM"
            
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_metric_speed_unit"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>